                        </Tab>
                        <Tab text="Change status">
                            <content>
                                <fx:include fx:id="status" source="Status.fxml" />
                            </content>
                        </Tab>
                        <Tab onSelectionChanged="#updateTechTab" text="Technicians">
                            <content>
                                <fx:include fx:id="tech" source="Tech.fxml" />
                            </content>
                        </Tab>
                        <Tab text="Technical requirements">
                            <content>
                                <fx:include fx:id="techreq" source="Techreq.fxml" />
                            </content>
                        </Tab>
                        <Tab text="Results">
                            <content>
                                <fx:include source="Report.fxml" fx:id="report" />
                            </content>
                        </Tab>
                    </tabs>
                </TabPane>
            </center>
        </BorderPane>
    </children>
</AnchorPane>
