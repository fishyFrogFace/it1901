<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.65"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.it1901.booking.JavaFX.Controllers.ConcertView.ConcertViewController">
    <children>
      <BorderPane>
          <top>
              <MenuBar BorderPane.alignment="CENTER">
                  <menus>
                      <Menu mnemonicParsing="false" text="Navigation">
                          <items>
                              <MenuItem fx:id="menuDash" mnemonicParsing="false" onAction="#goToDash" text="Dashboard" />
                              <MenuItem fx:id="menuLogout" mnemonicParsing="false" onAction="#logOut" text="Logout" />
                              <MenuItem fx:id="menuBack" mnemonicParsing="false" onAction="#goBack" text="Calendar" />
                          </items>
                      </Menu>
                      <Menu mnemonicParsing="false" text="Help">
                          <items>
                              <MenuItem mnemonicParsing="false" text="About" />
                          </items>
                      </Menu>
                  </menus>
              </MenuBar>
          </top>
         <center>
              <TabPane prefHeight="400.0" prefWidth="600.0" BorderPane.alignment="CENTER">
                  <tabs>
                      <Tab text="Information">
                     <content>
                        <fx:include fx:id="info" source="Info.fxml" />
                     </content>
                      </Tab>
                      <Tab text="Change status">
                     <content>
                        <fx:include fx:id="status" source="Status.fxml" />
                     </content>
                  </Tab>
                      <Tab text="Technicians" />
                      <Tab text="Assign technician" />
                      <Tab text="Results" />
                  </tabs>
              </TabPane>
         </center>
      </BorderPane>
    </children>
</AnchorPane>
